<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mcContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="18dp"
    android:minWidth="150dp"
    app:contentPaddingLeft="@dimen/doubleBottomMargin"
    app:contentPaddingRight="@dimen/doubleBottomMargin"
    app:cardElevation="0dp"
    app:rippleColor="@color/khaltiPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/carbonX_paddingHalf"
            android:layout_marginRight="@dimen/carbonX_paddingHalf"
            android:contentDescription="@null" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/body"
            app:fontFamily="@font/roboto" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>